<Ui>
    <FontString name="AutoCombatLoggerStringTemplate" font="Fonts/FRIZQT__.ttf" outline="NORMAL" justifyH="LEFT" virtual="true">
        <Color a="1" r="1" g="0.82" b="0" />
        <FontHeight>
            <AbsValue val="12" />
        </FontHeight>
    </FontString>
    <Frame name="AutoCombatLoggerFrame" parent="UIParent" clampedToScreen="true" enableMouse="true" movable="true" frameStrata="DIALOG">
        <Size x="610" y="358" />
        <Anchors>
            <Anchor point="CENTER" />
        </Anchors>
        <Backdrop edgeFile="Interface/DialogFrame/UI-DialogBox-Border" bgFile="Interface\DialogFrame\UI-DialogBox-Background">
			<EdgeSize val="32"/>
            <BackgroundInsets>
                <AbsInset left="5" right="5" top="5" bottom="5" />
            </BackgroundInsets>
		</Backdrop>
        <Frames>
            <Button name="$parentCloseButton" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-8" y="-8" />
                </Anchors>
            </Button>
        </Frames>
        <Layers>
            <Layer level="OVERLAY">
                <Texture name="$parentTitleTexture" file="Interface/DialogFrame/UI-DialogBox-Header">
                    <Size x="300" y="60" />
                    <Anchors>
                        <Anchor point="TOP" x="0" y="12" />
                    </Anchors>
                </Texture>
                <FontString name="$parentTitleString" inherits="AutoCombatLoggerStringTemplate" text="AutoCombatLogger">
                    <Anchors>
                        <Anchor point="TOP" x="0" y="-1" />
                    </Anchors>
                </FontString>
                <FontString name="$parentDungeonsString" inherits="AutoCombatLoggerStringTemplate" text="Dungeons">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="20" y="-20" />
                    </Anchors>
                </FontString>
                <FontString name="$parentRaidsString" inherits="AutoCombatLoggerStringTemplate" text="Raids">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="20" y="-250" />
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad>
                AutoCombatLogger_OnLoad(self)
            </OnLoad>
            <OnDragStart>
                self:StartMoving()
            </OnDragStart>
            <OnDragStop>
                self:StopMovingOrSizing()
            </OnDragStop>
            <OnEvent>
                AutoCombatLogger_OnEvent(self, event, ...)
            </OnEvent>
        </Scripts>
    </Frame>
</Ui>
